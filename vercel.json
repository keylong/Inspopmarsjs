{
  "regions": ["hkg1"],
  "functions": {
    "src/app/api/*": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/payment/order-status/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma", 
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ]
}
